/**tq.wxss**/
.container{
    background-color: #fff;
    padding-bottom: 0;
    overflow: hidden;
	font-size: 11pt;
	align-items: stretch;
	padding: 0;
	height: 100%;
}

/**.main-box**/
.main-box{
    position: relative;
    width: 100%;
    height: 1328rpx;
    display: flex;
    flex-direction: row;
    padding-bottom: 100rpx;
    transition: all .2s cubic-bezier(0.19, 1, 0.22, 1);
}

.weather-info {
    display: flex;
    justify-content: space-around;
    padding-top: 30rpx
}
.weather-city {
    margin-left: 19rpx
}
.info-item {
    text-align: center
}
.info-item view {
    padding: 12rpx
}
.confirm-btn {
	font-size: 13pt;
	line-height: 85rpx;
	height: 85rpx;
	background: #73b4ef;
	color: #fff;
	text-align: center;
	border-radius: 5px;
	margin: 50rpx 3%;
}
